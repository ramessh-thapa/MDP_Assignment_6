<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add Historical Event"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="#f5f4f2"
        android:background="@color/colorButtonPrimary"/>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:orientation="vertical"
        android:padding="15dp">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Historical Sports Event Name" />

        <EditText
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:hint="Date"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:drawableTint="#ddd"/>

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Description"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:backgroundTint="@color/colorButtonPrimary"
                android:textColor="#f5f4f2"
                android:gravity="center"/>

            <Button
                android:id="@+id/addButton"
                android:layout_width="100dp"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"
                android:text="Add"
                android:backgroundTint="@color/colorButtonPrimary"
                android:textColor="#f5f4f2"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


